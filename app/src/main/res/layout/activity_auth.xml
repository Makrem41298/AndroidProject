<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">

    <TextView
        android:id="@+id/LablePageLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/lablePageLogin"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/LableEmail"
        style="@style/LoginLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Email or Mobile Number"
        app:layout_constraintTop_toBottomOf="@id/LablePageLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/InputEmail"
        style="@style/InputText"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/email_login"
        android:hint="example@example.com"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/LableEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/LablePassword"
        style="@style/LoginLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/InputEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/InputPassword"
        style="@style/InputText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/email_login"
        android:hint="••••••••"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/LablePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/LableForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Forget Password"
        android:textColor="#0057FF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/InputPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BtnLogin"
        style="@style/LoginButtonStyle"
        android:text="Log In"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/LableForgetPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
